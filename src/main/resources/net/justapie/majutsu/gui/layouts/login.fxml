<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="231.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12"
          fx:controller="net.justapie.majutsu.gui.controller.LoginController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="129.0" minHeight="10.0" prefHeight="49.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="129.0" minHeight="10.0" prefHeight="44.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="243.0" minHeight="10.0" prefHeight="149.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <GridPane GridPane.rowIndex="2">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="295.0" minWidth="10.0" prefWidth="165.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="478.0" minWidth="10.0" prefWidth="435.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label alignment="CENTER_RIGHT" prefHeight="38.0" prefWidth="110.0" text="Email">
                    <font>
                        <Font size="21.0"/>
                    </font>
                </Label>
                <TextField fx:id="emailField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0"
                           prefWidth="404.0" GridPane.columnIndex="1" GridPane.hgrow="NEVER"/>
                <Label alignment="CENTER_RIGHT" prefHeight="31.0" prefWidth="113.0" text="Password"
                       GridPane.rowIndex="1">
                    <font>
                        <Font size="21.0"/>
                    </font>
                </Label>
                <PasswordField fx:id="passwordField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0"
                               prefWidth="404.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <GridPane prefHeight="45.0" prefWidth="440.0" GridPane.columnIndex="1" GridPane.halignment="CENTER"
                          GridPane.rowIndex="2" GridPane.valignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="212.0" minWidth="10.0"
                                           prefWidth="111.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="351.0" minWidth="10.0" prefWidth="199.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="351.0" minWidth="10.0" prefWidth="125.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Button mnemonicParsing="false" onAction="#onLoginButtonClick" prefHeight="25.0"
                                prefWidth="61.0" text="Login"/>
                        <Label alignment="CENTER" prefHeight="23.0" prefWidth="230.0" text="Don't have an account?"
                               GridPane.columnIndex="1">
                            <font>
                                <Font size="17.0"/>
                            </font>
                        </Label>
                        <Button mnemonicParsing="false" onAction="#onRegisterButtonClick" text="Register"
                                GridPane.columnIndex="2" GridPane.halignment="CENTER"/>
                    </children>
                </GridPane>
            </children>
        </GridPane>
        <Label alignment="CENTER" prefHeight="57.0" prefWidth="600.0"
               text="Welcome to Majutsu Library Management System">
            <font>
                <Font name="System Bold" size="21.0"/>
            </font>
        </Label>
        <Label fx:id="authPrompt" alignment="CENTER" prefHeight="34.0" prefWidth="600.0"
               text="Please login or register to continue" GridPane.rowIndex="1">
            <padding>
                <Insets left="20.0" right="20.0"/>
            </padding>
            <font>
                <Font size="21.0"/>
            </font>
        </Label>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</GridPane>
