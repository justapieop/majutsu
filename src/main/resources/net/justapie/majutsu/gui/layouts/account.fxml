<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="291.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12"
            fx:controller="net.justapie.majutsu.gui.controller.AccountController">
    <center>
        <GridPane maxHeight="-Infinity" maxWidth="1.7976931348623157E308" prefHeight="116.0" prefWidth="600.0"
                  BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="295.0" minWidth="10.0" prefWidth="175.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="483.0" minWidth="10.0" prefWidth="281.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="483.0" minWidth="10.0" prefWidth="199.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="152.0" minHeight="10.0" prefHeight="38.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="274.0" minHeight="9.0" prefHeight="43.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="274.0" minHeight="10.0" prefHeight="38.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label alignment="CENTER_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                       text="Name">
                    <padding>
                        <Insets right="10.0"/>
                    </padding>
                </Label>
                <TextField fx:id="newNameField" GridPane.columnIndex="1"/>
                <Button mnemonicParsing="false" onAction="#onSaveName" text="Save" GridPane.columnIndex="2">
                    <GridPane.margin>
                        <Insets left="20.0"/>
                    </GridPane.margin>
                </Button>
                <Label alignment="CENTER_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                       text="New password" GridPane.rowIndex="1">
                    <padding>
                        <Insets right="10.0"/>
                    </padding>
                </Label>
                <Label alignment="CENTER_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                       text="Current password" GridPane.rowIndex="2">
                    <padding>
                        <Insets right="10.0"/>
                    </padding>
                </Label>
                <PasswordField fx:id="newPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <PasswordField fx:id="confirmPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Button mnemonicParsing="false" onAction="#onSavePassword" text="Save password" GridPane.columnIndex="2"
                        GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets left="20.0"/>
                    </GridPane.margin>
                </Button>
                <Label fx:id="changePasswordPrompt" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                       wrapText="true" GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <padding>
                        <Insets left="20.0"/>
                    </padding>
                </Label>
            </children>
        </GridPane>
    </center>
    <top>
        <GridPane prefHeight="92.0" prefWidth="600.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="335.0" minWidth="10.0" prefWidth="317.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="295.0" minWidth="10.0"
                                   prefWidth="283.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="My account">
                    <padding>
                        <Insets left="20.0"/>
                    </padding>
                    <font>
                        <Font size="21.0"/>
                    </font>
                </Label>
                <Button alignment="CENTER" mnemonicParsing="false" onAction="#onAccountBackButton" text="Back"
                        GridPane.columnIndex="1"/>
            </children>
        </GridPane>
    </top>
</BorderPane>
